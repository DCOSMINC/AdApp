@model AdData.Models.Ad

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Ad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <div class="form-group" role="textbox" multiline="true" max-height="1050px" data-role="editable" style="width: 100%; margin-bottom: 5px; margin-top: 8px; overflow: auto">
                    <textarea id="descriptionTextArea" type="text" asp-for="Description" class="form-control" placeholder="Add a Comment ..." style="display: inline;">
    
                    </textarea>
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="AddDate" class="form-control" type="hidden"/>
                
            </div>

            <div class="form-group">
                
                <input asp-for="ExpirationDate" class="form-control" type="hidden" />
                
            </div>

            <div class="form-group">
                <label asp-for="CategoryIdVal" class="control-label"> Category </label>
                <select asp-for="CategoryIdVal" class="form-control" asp-items="ViewBag.Categories">Categorie</select>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" type="file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

